{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% if error %}
        <div class="alert alert-danger">
            <strong>Erreur de connexion !</strong> {{ error }}
        </div>
    {% endif %}
    <div class="well">
        <form class="form-signin form-horizontal" role="form" action="{{ path('admin_login_check') }}" method="post">
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Login" required autofocus>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input type="password" name="_password" class="form-control" placeholder="Mot de passe" required>
            </div>
            <button type="submit" class="btn btn-default btn-login">Connexion</button>


        </form>
    </div>
{% endblock %}
